{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "sourceMap": true,
      "rootDir": "./",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "noEmitOnError": false,
      "removeComments": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }